@model Task1.Models.BusinessCardViewModel
@{
}
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - Task1</title>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
@* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
</head>

@* <a href="/BusinessCard/List" class="btn btn-primary">See the List</a> *@
<div class="container h-100 d-flex align-items-center justify-content-center">
<div class="container text-center">
    <form method="post" action="/BusinessCard/GenerateBusinessCard">
        <div class="container w-25">
        <div asp-validation-summary="All"> </div>
            </div>

        <div class="row">
        <div class="col" >
        <div class="form-group">
            <label asp-for="Name" class="form-label">Name*</label>
            <input asp-for="Name" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Surname" class="form-label">Surname*</label>
            <input asp-for="Surname" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Age" class="form-label">Age*</label>
            <input type="number" asp-for="Age" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="IdNumber" class="form-label">IdNumber*</label>
            <input asp-for="IdNumber" class="form-control">
        </div>
        </div>

        <div class="col">
        <div class="form-group">
            <label asp-for="Country" class="form-label">Country*</label>
            <input asp-for="Country" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="City" class="form-label">City*</label>
            <input asp-for="City" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Street" class="form-label">Street*</label>
            <input asp-for="Street" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="HouseApartmentNumber" class="form-label">House/Apartment Number*</label>
            <input type="number" asp-for="HouseApartmentNumber" class="form-control">
        </div>
        </div>



        <div class="col" >
        <div class="form-group">
            <label asp-for="FontSize" class="form-label">Font Size</label>
            <input type="number" asp-for="FontSize" class="form-control" value="25">
        </div>
        <div class="form-group">
            <label asp-for="Typeface" class="form-label">TypeFace</label>
            <select asp-for="Typeface" class="form-select">
                <option value="Arial" style="font-family:Arial">Arial</option>
                <option value="Times New Roman" style="font-family:Times New Roman">Times New Roman</option>
                <option value="Courier New" style="font-family:'Courier New'">Courier New</option>
                <option value="Monotype Corsiva" style="font-family:'Monotype Corsiva'">Monotype Corsiva</option>
                <option value="Impact" style="font-family:Impact">Impact</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="BackgroundColor" class="form-label">Background Color</label>
            <input type="color" asp-for="BackgroundColor" class="form-control" value="#ffffff">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="IsBold">
            <label class="form-check-label" asp-for="IsBold">Is Bold</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="IsUnderlined">
            <label class="form-check-label" asp-for="IsUnderlined">Is Underlined</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="IsItalic">
            <label class="form-check-label" asp-for="IsItalic">Is Italic</label>
        </div>
        </div>
        </div>
        <button type="submit" class="btn btn-primary">Create Business Card</button>
    </form>
</div>
</div>